{% set breadcrumbs = [
    entry,
] %}

{% block content %}

    <div class="section section--default">
        <div class="container">
            {% include '_snippet/_content/_pageTitle' %}
            {% include '_snippet/_content/_intro' %}
        </div>
    </div>
    {% include '_snippet/_content/_contentBuilder'
        with {
        settings : {
            section: 'section',
            container: 'container'
        }
    } %}

    <div class="section section--default">
        <div class="container">
            {{ craft.freeform.form('contactForm', {
                labelClass: 'form__label',
                submitClass: "btn"
            }).render() }}
        </div>
    </div>

{% endblock %}
