{% if block.video != '' %}
    {% if settings.section is not defined %}
        {% if block['backgroundColor'] is defined %}
            {% set class = 'block block--panel block--' ~block.backgroundColor %}
        {% endif %}
    {% else %}
        {% set class = 'block' %}
    {% endif %}

    <div class="{{ class }}">
        <div class="grid__12">
            <div class="embed-container">
                {{ block.video|videoEmbed({ width: '100%', height: 600 }) }}
            </div>
        </div>
    </div>
{% endif %}
