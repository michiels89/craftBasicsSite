{% if settings.section is not defined %}
    {% if block['backgroundColor'] is defined %}
        {% set class = 'block block--panel block--' ~block.backgroundColor %}
    {% endif %}
{% else %}
    {% set class = 'block' %}
{% endif %}

<div class="{{ class }}">
    <div class="grid">
        <div class="grid__12 {% if settings.centered is not defined %}grid--bp-med__8{% endif %}">
            {% if block.heading|length %}
                <h2>{{ block.heading }}</h2>
            {% endif %}
            {{ block.text }}
            {% if block.form|length %}
                {{ block.form.render({
                    labelClass: 'form__label',
                    submitClass: 'btn',
                }) }}
            {% endif %}
        </div>
    </div>
</div>
