{% set inverseClass = block.videoPosition == 'left' ? '' : 'grid--reverse' %}
{% if settings.section is not defined  %}
    {% if block['backgroundColor'] is defined %}
        {% set class = 'block block--panel block--' ~block.backgroundColor %}
    {% endif %}
{% else %}
    {% set class = 'block' %}
{% endif %}

<div class="{{ class }}">
    <div class="grid {{ inverseClass }}">
        <div class="grid__12 grid--bp-med__6">
            {% if block.video != '' %}
                <div class="embed-container">
                    {{ block.video|videoEmbed({ width: '100%', height: 360 }) }}
                </div>
            {% endif %}
        </div>
        <div class="grid__12 grid--bp-med__6">
            <div class="spacer">
                {{ block.text }}
            </div>
            <div class="spacer">
                {% if block.cta|length %}
                    <div class="inline">
                        {% for cta in block.cta.find() %}
                            {% include '_snippet/_content/_block/_cta' %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
